@model IEnumerable<tour>
@{
    ViewData["title"] = "Users";
}

<h1 class="title-d">My Tours</h1>

 <form class="form-a" method="post">
<table class="table table-striped mt-4">
    <thead>
<tr bgcolor="LightGreen" class='btn-bot'>

  
    <th>TG Name</th>
    <th>TG PhoneNUM</th>
    <th>From</th>
    <th>To</th>
    <th>Place</th>
    <th>Tour Price</th>
    <th>Pay</th>
    <th>Payment Status</th>
    <th>Blance</th>
    <th>Operation</th>
    
  


</tr>

    </thead>

    <tbody>
       @foreach(var tour in Model){
            <tr>
            
               <td>@tour.tourguidename</td>
               <td>@tour.tourguidephone</td>
               <td>@tour.FromDate</td>
               <td>@tour.ToDate</td>
               
               <td>@tour.plces</td>
               <td>@tour.price</td>
                <td> <a asp-action="pay"   asp-controller="tours" asp-route-id="@tour.Id">Pay</a></td>
               <td>@tour.status</td>
               <td>@tour.balance</td>
             <td>
                
                <a asp-action="Details"   asp-controller="tours" asp-route-id="@tour.Id">Details</a> |
                <a asp-action="Delete" asp-controller="tours" asp-route-id="@tour.Id">Delete</a>
            </td>

            </tr>
            
       }
        
         


    </tbody>


</table>
<div>

       <a asp-controller="Home" asp-action="createtour">create new tour</a>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.table').DataTable({
            dom: 'Bfrtip',
            buttons: [
           
                'excelHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
   </form>