@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "_layout";
}
@model IEnumerable<graduationtourwebsite.Models.place> 
<html>

<head>
<title class="title-d">Places</title>

</head>
<body>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<div><center><h3>Top Fascinating Historic Places in Jordan</h3></center></div>
<br>
<br>
<br>

<main class="grid">

        @foreach(var p in Model)
        {



        <article>

<img src=~/assets/img/@p.name/1.jpg alt=@p.name>


    
    <div class="text">
        <br>
        <h3>@p.name</h3>
        <br>
      <h3>@p.aboutplace</h3>
      <p>@p.description</p>
                    @if (SignInManager.IsSignedIn(User) == true && User.IsInRole("Admin"))
                    {
                        <a class='btn-bot'    asp-controller="Home" asp-action="addplace"  >Sugesst place</a>
                    }
      <button class='btn-bot' onclick="window.open('@p.moreinfoURL' ,'_blank') ;">See More</button>
   @*<button  >Book now</button>*@

   <a class='btn-bot'    asp-controller="Home" asp-action="CreateTour"  >Create My Tour</a>
   
  </div>
  </article>
}


</main>
</body>
</html>

<style>
.grid { 
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 20px;
  align-items: stretch;
  }
.grid > article {
  border: 1px solid #ccc;
  box-shadow: 2px 2px 6px 0px  rgba(0,0,0,0.3);
}
.grid > article img {
  max-width: 100%;
}
.text {
  padding: 0 20px 20px;
}

  .text > button {
background:#ffffff;
 color:black;
 padding:0.6rem 0.8rem;
 border:2px solid #2eca6a;
 border-radius:50px;
 text-transform:uppercase;
 letter-spacing:0.03em;

  }



</style>